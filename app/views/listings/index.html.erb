<p id="notice"><%= notice %></p>

<div class="container-fluid">
  <h2 class="pl-4 pt-2"><i>
    Find your ideal venue...
  </h2></i>
  <div class="row d-flex"> 
  

    <% @listings.each do |listing| %>

      <%= link_to listing do %>

        <div class="container p-4">

        <div class="col-12 col-sm-6 col-lg-3">

        <div class="row">
          <div class="col d-flex align-items-center">
            <strong>
            <%= listing.title %>
            </strong>
          </div>
        </div>

          <div class="row">
            <div class="col-12">
              <%= image_tag listing.image.thumb.url %>
            </div>
          </div>
          
          <div class="row">
            <div class="col-12">
              $<%= listing.price %>0
            </div>
          </div>

          <div class="row">
            <div class="col-12">
              <strong>Description: </strong><%= listing.description %>
            </div>
          </div>

          <div class="row">
            <div class="col-12">
              <strong>Address: </strong><%= listing.address %>
            </div>
          </div>

        </div>    
        </div>
      <% end %>

   <% end %>

    
  </div>
</div>